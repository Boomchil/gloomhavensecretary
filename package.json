{
  "name": "gloomhavensecretary",
  "version": "0.5.1",
  "license": "AGPL3",
  "description": "Gloomhaven Secretary is an angular based Gloomhaven Helper clone.",
  "author": {
    "name": "Lurkars",
    "email": "ghs@champonthis.de",
    "url": "https://www.champonthis.de"
  },
  "repository": "github:Lurkars/gloomhavensecretary",
  "bugs": "https://github.com/Lurkars/gloomhavensecretary/issues",
  "main": "main.js",
  "scripts": {
    "electron": "node ./scripts/concat-data.js && ng build --base-href ./ && electron .",
    "electron:build": "node ./scripts/concat-data.js && ng build --base-href ./ && electron-builder",
    "ng": "ng",
    "start": "node ./scripts/concat-data.js && ng serve",
    "build": "node ./scripts/concat-data.js && ng build",
    "watch": "node ./scripts/concat-data.js && ng build --watch --configuration development",
    "test": "node ./scripts/concat-data.js && ng test"
  },
  "build": {
    "appId": "gloomhavensecretary",
    "linux": {
      "target": [
        "AppImage",
        "rpm",
        "deb"
      ]
    },
    "mac": {
      "type": "distribution",
      "target": [
        "dmg",
        "pkg"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "files": [
      "main.js",
      "dist/gloomhavensecretary"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.0.1",
    "@angular/cdk": "^14.0.1",
    "@angular/common": "^14.0.1",
    "@angular/compiler": "^14.0.1",
    "@angular/core": "^14.0.1",
    "@angular/forms": "^14.0.1",
    "@angular/platform-browser": "^14.0.1",
    "@angular/platform-browser-dynamic": "^14.0.1",
    "@angular/router": "^14.0.1",
    "@angular/service-worker": "^14.0.1",
    "rxjs": "~7.5.5",
    "tslib": "^2.4.0",
    "zone.js": "~0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.2",
    "@angular/cli": "^14.0.2",
    "@angular/compiler-cli": "^14.0.1",
    "@types/jasmine": "~4.0.3",
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3",
    "http-server": "^14.1.1",
    "jasmine-core": "~4.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.0.1",
    "karma-jasmine-html-reporter": "~2.0.0",
    "puppeteer": "^14.4.0",
    "typescript": "~4.7.3"
  }
}
